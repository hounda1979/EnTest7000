<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="51dp" />

    <Button
        android:id="@+id/m_word"
        android:layout_width="111dp"
        android:layout_height="104dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:onClick="mword"
        android:text="依單字"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <Button
        android:id="@+id/m_sentence"
        android:layout_width="111dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:onClick="msentence"
        android:text="依例句"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <Button
        android:id="@+id/m_word_bk"
        android:layout_width="111dp"
        android:layout_height="104dp"
        android:layout_marginTop="32dp"
        android:onClick="mwordbk"
        android:text="單字填空"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/m_word"
        app:layout_constraintTop_toBottomOf="@+id/m_word" />

    <Button
        android:id="@+id/m_sentence_bk"
        android:layout_width="111dp"
        android:layout_height="104dp"
        android:layout_marginTop="32dp"
        android:onClick="msentencebk"
        android:text="例句填空"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/m_sentence"
        app:layout_constraintTop_toBottomOf="@+id/m_sentence" />

</androidx.constraintlayout.widget.ConstraintLayout>